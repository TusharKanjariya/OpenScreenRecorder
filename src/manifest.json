{
    "manifest_version": 3,
    "name": "OpenScreenRecorder",
    "version": "1.0",
    "description": "A lightweight and intuitive browser extension for screen recording.",
    "permissions": [
        "desktopCapture",
        "storage"
    ],
    "action": {
        "default_popup": "./popup.html"
    },
    "background": {
        "service_worker": "./background.js"
    }
}